body
	width 100%
	height 100%
	background-size 100% 100%
	margin 0px

#container
	width 900px
	height 600px
	border 1px solid grey
	position relative
	margin auto
	margin-top 100px
	overflow auto
.svg
	width 900px
	height 600px

.tooltip
	opacity 0
	border 1px solid grey
	width 80px
	height 20px
	padding-top 5px
	text-align center
	position absolute
	left 20px
	top 20px

.xAxis path,
.xAxis line
	fill none
	stroke grey
	stroke-width 1px
	shape-rendering crispEdges


.xAxis text
	fill black
	font-size 12px
	font-family arial

.yAxis path
.yAxis line
	fill none
	stroke grey
	shape-rendering crispEdges
	color #F2F2F2

.yAxis text
	fill black
	font-size 12px
	font-family arial

.mention
	fill #0B243B
	stroke #EFF5FB
	stroke-width 2px